# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
# CRITICAL: Do NOT add spaces in optional chaining operator
# It must be `?.` NOT `? .`
indent_style = space
indent_size = 4

